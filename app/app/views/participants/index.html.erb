<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Participantes</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Anjos do Superação</a>
            </li>
            <li class="active">
                <strong>Participantes</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">

  <div class="col-lg-12">
  <div class="ibox float-e-margins">
  <div class="ibox-title">
      <h5>Lista de participantes</h5>
      <div class="ibox-tools">
        <a href="" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Criar Participante</a>
      </div>
  </div>
  <div class="ibox-content">
      <div class="row">
          <div class="col-sm-8 m-b-xs">
              <div data-toggle="buttons" class="btn-group">
                  <label class="btn btn-sm btn-white active"> <input type="radio" id="option1" name="options"> Todos </label>
                  <label class="btn btn-sm btn-white"> <input type="radio" id="option2" name="options"> Superadores </label>
                  <label class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> Anjos </label>
                  <label class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> Arcanjos </label>
              </div>
          </div>
          <div class="col-sm-4">
              <div class="input-group"><input type="text" placeholder="Nome" class="input-sm form-control"> <span class="input-group-btn">
                                  <button type="button" class="btn btn-sm btn-primary"> Buscar</button> </span></div>
          </div>
      </div>
      <div class="table-responsive">
          <table class="table table-striped">
              <thead>
              <tr>
                  <th> </th>
                  <th> </th>
                  <th style="width:50%">Nome </th>
                  <th style="width:30%">Cidade/Estado </th>
                  <th>Trios </th>
                  <th>Missões </th>
              </tr>
              </thead>
              <tbody>
              <% @participants.each do |p| %>
              <tr>
                  <td>
                      <span class="label label-default"><%= type_label(p.type) %></span>
                  </td>
                  <td class="project-people">
                    <a href=""><img alt="image" class="img-circle" src="/images/a3.jpg"></a>
                  </td>
                  <td class="project-title">
                      <a href="#"><%= p.name %></a>
                      <br/>
                      <small>Desde <%= p.created_at.strftime("%d/%m/%Y") %></small>
                  </td>
                  <td>
                    <%= "#{p.profile.city}, #{p.profile.state}" if p.profile  %>
                  </td>
                  <td>
                    3
                  </td>
                  <td>
                    5/187
                  </td>
              </tr>
              <% end %>
            </tbody>
        </table>

        <%= paginate @participants %>
    </div>

</div>
</div>
</div>
</div>



</div>
